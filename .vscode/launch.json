    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "Jest Tests",
            "program": "${workspaceRoot}/node_modules/jest/bin/jest.js",
            "args": [
                "-i",
                "--verbose",
                "--passWithNoTests"
            ],
            "internalConsoleOptions": "openOnSessionStart",
            "envFile": "${workspaceRoot}/.env",
            "console": "internalConsole"
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Jest Tests with Success Message",
            "program": "${workspaceRoot}/run-jest.js",
            "args": [
                "-i",
                "--verbose",
                "--passWithNoTests"
            ],
            "internalConsoleOptions": "openOnSessionStart",
            "envFile": "${workspaceRoot}/.env",
            "console": "internalConsole"
        },
        
    ]
}